<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('head'); %>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
          <div class="card shadow">
            <div class="card-header bg-success">
              <h3 class="text-light"><%= title %></h3>
            </div>
          </div>
          <div class="card-body p-4">
            <form action="/update/<%= user._id %>" method="post" id="add-form">
              <div class="mb-3">
                <label for="surname">
                  Прізвище
                  <input
                    class="form-control form-control-lg"
                    id="surname"
                    name="surname"
                    type="text"
                    placeholder="Прізвище"
                    required
                    value="<%= user.surname %>"
                  />
                </label>
              </div>
              <div class="mb-3">
                <label for="name">
                  Ім'я
                  <input
                    id="name"
                    name="name"
                    type="text"
                    placeholder="Ім'я"
                    class="form-control form-control-lg"
                    required
                    value="<%= user.name %>"
                  />
                </label>
              </div>
              <div class="mb-3">
                <label>
                  По батькові
                  <input
                    id="patronymic"
                    name="patronymic"
                    type="text"
                    placeholder="По батькові"
                    class="form-control form-control-lg"
                    value="<%= user.patronymic %>"
                  />
                </label>
              </div>

              <div class="mb-3">
                <label>
                  Електронна пошта
                  <input
                    id="email"
                    name="email"
                    type="text"
                    placeholder="Електронна пошта"
                    class="form-control form-control-lg"
                    required
                    value="<%= user.email %>"
                  />
                </label>
              </div>

              <div class="mb-3 d-grid">
                <input
                  type="submit"
                  name="submit"
                  value="Оновити"
                  class="btn btn-success btn-lg"
                />
              </div>
              <div class="mb-3 d-grid">
                <a href="/cancel" name="cancel" class="btn btn-secondary btn-lg"
                  >Скасувати</a
                >
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
